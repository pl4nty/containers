{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableRateLimiting"
  ],
  "additionalBranchPrefix": "{{parentDir}}-", 
  "ignorePaths": ["archive"],
  "rangeStrategy": "pin",
  "ignoreTests": true,
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "matchManagers": ["git-submodules"],
      "versioning": "semver-coerced"
    },
    {
      "matchManagers": ["git-submodules"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchManagers": ["git-submodules"],
      "matchPackagePrefixes": ["https://github.com/pl4nty/"],
      "automerge": true
    }
  ],
  "git-submodules": {
    "enabled": true
  }
}
