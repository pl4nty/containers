{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableRateLimiting"
  ],
  "additionalBranchPrefix": "{{parentDir}}-", 
  "ignorePaths": ["archive/**"],
  "rangeStrategy": "pin",
  "rebaseWhen": "conflicted",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "git-submodules": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchManagers": ["git-submodules"],
      "matchPackagePrefixes": ["https://github.com/pl4nty/", "https://github.com/stephenegriffin/MHA"],
      "automerge": true
    },
    {
      "matchManagers": ["git-submodules"],
      "matchPackagePrefixes": ["archive/"],
      "enabled": false
    }
  ],
  "hostRules": [
    {
      "hostType": "docker",
      "matchHost": "docker.io",
      "username": "pl4nty",
      "encrypted": {
        "password": ""
      }
    }
  ]
}
